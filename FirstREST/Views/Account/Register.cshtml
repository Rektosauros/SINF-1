@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{@Html.AntiForgeryToken()
    <div class="container">
        <span style="color:red">@ViewBag.errorMessage</span>
        <form id="register_form" class="form-horizontal">
            <fieldset>
                <!-- Form Name -->
                <legend>Register</legend>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="full_name">Nome Completo</label><br />
                    <div class="col-md-4">
                        <input name="full_name" type="text" placeholder="Nome Completo" class="form-control input-md" required="">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="abrev">Nome Abrev.</label><br />
                    <div class="col-md-4">
                        <input name="abrev" type="text" placeholder="Nome abreviado" class="form-control input-md" required="">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="username">Nome de Utilizador</label><br />
                    <div class="col-md-4">
                        <input name="username" type="text" placeholder="Nome de Utilizador" class="form-control input-md">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="address">Morada</label><br />
                    <div class="col-md-4">
                        <input name="address" type="text" placeholder="Morada" class="form-control input-md">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="phone">Número de Telefone</label><br />
                    <div class="col-md-4">
                        <input name="phone" type="text" placeholder="Número de Telefone" class="form-control input-md" required="">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="email">Endereço e-mail</label><br />
                    <div class="col-md-4">
                        <input name="email" type="email" placeholder="Endereço e-mail" class="form-control input-md" required="">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="nif">Número de Contribuinte</label><br />
                    <div class="col-md-4">
                        <input name="nif" type="text" placeholder="Número de Contribuinte" class="form-control input-md" required="">
                    </div><br />
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="password">Palavra-Passe</label><br />
                    <div class="col-md-4">
                        <input name="password" type="password" placeholder="Palavra-Passe" class="form-control input-md">
                    </div><br />
                </div>
                <!-- Button (Double) -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <button id="register" name="register" type="submit" class="btn btn-success">Registar</button>
                        <button id="cancel" name="cancel" class="btn btn-danger">Cancelar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
}

